{
	"name": "presentation-parzival",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"docker:start": "docker pull existdb/existdb:6.2.0 && docker run -d -p 8081:8080 -p 8444:8443 --name teipublisher existdb/existdb:6.2.0",
		"installXar": "wget https://dhbern.github.io/parzival-static-api/parzival-0.2.xar -O parzival-0.2.xar && xst package install parzival-0.2.xar && rm parzival-0.2.xar",
		"docker:stop": "docker stop teipublisher && docker rm teipublisher",
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./jsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./jsconfig.json --watch",
		"lint": "prettier --plugin-search-dir . --check . && eslint .",
		"format": "prettier --plugin-search-dir . --write ."
	},
	"devDependencies": {
		"@existdb/xst": "^1.9.4",
		"@skeletonlabs/skeleton": "^2.10.2",
		"@skeletonlabs/tw-plugin": "^0.4.0",
		"@sveltejs/adapter-static": "^3.0.6",
		"@sveltejs/enhanced-img": "^0.4.0",
		"@sveltejs/kit": "^2.7.2",
		"@sveltejs/vite-plugin-svelte": "^5.0.0",
		"@sveltejs/vite-plugin-svelte-inspector": "^4.0.0",
		"@tailwindcss/container-queries": "^0.1.1",
		"@tailwindcss/forms": "^0.5.7",
		"@tailwindcss/typography": "^0.5.12",
		"@types/d3": "^7.4.3",
		"autoprefixer": "^10.4.16",
		"eslint": "^9.0.0",
		"eslint-config-prettier": "^9.0.0",
		"eslint-plugin-svelte": "^2.45.1",
		"postcss": "^8.4.31",
		"prettier": "^3.1.0",
		"prettier-plugin-svelte": "^3.2.6",
		"sander": "^0.6.0",
		"svelte": "^5.0.0",
		"svelte-check": "^4.0.1",
		"tailwindcss": "^3.3.5",
		"typescript": "^5.5.0",
		"vite": "^6.0.0"
	},
	"type": "module",
	"dependencies": {
		"@floating-ui/dom": "^1.6.3",
		"@fortawesome/fontawesome-free": "^6.4.2",
		"@types/openseadragon": "^3.0.10",
		"d3": "^7.9.0",
		"estree-walker": "^3.0.3",
		"minisearch": "^7.1.1",
		"openseadragon": "^5.0.0"
	}
}
